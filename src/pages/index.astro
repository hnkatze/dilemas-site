---

<Layout>
	<!-- <DilemmaNav />

	{dilemmas.map((dilema) => (
		<SectionDilema {...dilema} />
	))} -->

<DilemmaNav />
  
  <div class="container mx-auto px-4 py-8">
    {dilemmas.map((dilema, index) => (
      <SectionDilema 
        {...dilema} 
        index={index} 
        orientation={index % 2 === 0 ? "odd" : "even"}
      />
    ))}
  </div>
		

</Layout>
